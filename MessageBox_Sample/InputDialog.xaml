<ContentDialog
    x:Class="MessageBox_Sample.InputDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MessageBox_Sample"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Input Dialog"
    PrimaryButtonClick="InputDialog_PrimaryButtonClick"
    PrimaryButtonText="OK"
    SecondaryButtonClick="InputDialog_SecondaryButtonClick"
    SecondaryButtonText="CANCEL"
    mc:Ignorable="d">

    <ContentDialog.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ControlStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ContentDialog.Resources>
    <Grid>
        <TextBox
            x:Name="InputTextBox"
            PlaceholderText="Input"
            Style="{StaticResource TextBoxStyle}" />
    </Grid>

</ContentDialog>
